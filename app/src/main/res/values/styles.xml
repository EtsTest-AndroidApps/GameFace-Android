<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="primary_button_theme">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/signup_button</item>
    </style>

    <style name="small_text">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="normal_text">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- StartScreen -->
    <style name="start_text">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/raleway</item>
    </style>

    <style name="startscreen_text_title" parent="start_text">
        <item name="fontFamily">@font/raleway_light</item>
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>

    <style name="startscreen_text_title_2" parent="start_text">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="fontFamily">@font/raleway_medium</item>
    </style>

    <style name="startscreen_text_slogan" parent="start_text">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="fontFamily">@font/raleway_light</item>
    </style>

    <style name="card_style">
        <item name="cardCornerRadius">@dimen/card_radius</item>
    </style>

    <style name="imageview_card_style">
        <item name="android:scaleType">fitXY</item>
        <item name="srcCompat">@drawable/button_shadow</item>
    </style>

    <!-- Sign Up Screen -->

    <style name="startscreen_text_signup">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/raleway_light</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
    </style>

    <style name="button_white_text_no_background">
        <item name="android:background">#00000000</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textColor">@color/button_no_bgnd_text</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="signup_title" parent="start_text">
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="signup_edittext">
        <item name="android:background">@drawable/signup_editext</item>
        <item name="drawableTint">@color/greyed_text</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="hintTextColor">@color/greyed_text</item>
        <item name="fontFamily">@font/raleway</item>
        <item name="android:drawablePadding">@dimen/padding_large</item>
        <item name="android:padding">@dimen/padding_edittext</item>
    </style>

    <style name="signup_button" parent="primary_button_theme">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    
    <style name="terms_and_conditions" parent="start_text">
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Login Screen -->
    <style name="login_title" parent="start_text">
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>

    <style name="login_horizontal_line">
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="login_horizontal_line_text">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/raleway_light</item>
    </style>

    <style name="main_toolbar_text">
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Shop Screen -->
    <style name="shop_searchbar">
        <item name="android:backgroundTint">@color/white</item>
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="android:hint">@string/app_bar_search_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/searchable_background</item>
    </style>




</resources>
