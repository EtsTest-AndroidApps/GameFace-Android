<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- StartScreen -->
    <style name="start_text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="startscreen_text_title" parent="start_text">
        <item name="fontFamily">@font/raleway_light</item>
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>

    <style name="startscreen_text_title_2" parent="start_text">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="fontFamily">@font/raleway_medium</item>
    </style>

    <style name="startscreen_text_slogan" parent="start_text">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="fontFamily">@font/raleway_light</item>
    </style>

    <style name="card_style">
        <item name="cardCornerRadius">@dimen/card_radius</item>
    </style>

    <style name="imageview_card_style">
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/card_background</item>
    </style>

    <style name="startscreen_text_signup">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
    </style>

    <style name="startscreen_btn_login" parent="start_text">
        <item name="android:background">#00000000</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>


</resources>
